<div class="{{ errors ? 'alert alert-danger' : ''}}" role="alert">
    {% for error in errors %}
        {{ error }}<br>
    {% endfor %}
</div>
<form method="POST" action="{{ action }}">
    {% if method %}
        <input type="hidden" name="_METHOD" value="{{ method }}">
    {% endif %}
    <table>
        <tr><td>Name</td><td><input type="text" name="name" value="{{ formFields.name }}"></td></tr>
        <tr><td>Description</td><td><input type="text" name="description" value="{{ formFields.description }}"></td></tr>
        <tr><td>Due At</td><td><input type="text" name="due_at" value="{{ formFields.due_at }}"></td></tr>
        <tr><td colspan="2"><input type="hidden" name="_token" value="{{ formFields.token }}"><input type="submit" value="Save"></td></tr>
    </table>
</form>